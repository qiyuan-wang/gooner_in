#main
  .container
    .row
      #mainbar.span9.box
        %h2.question-title.white #{@question.title}
        .related-players-wrapper.clearfix
          .related-players
            %span.white 相关球员
            - if !@question.related_players.empty?
              %ul.unstyled
                = render :partial => 'shared/related_player', collection: @question.related_players.limit(2)
        %h3.white.leading 你的回答
        = form_for @answer, :url => question_answers_path(question_id: @question) do |f|
          = render :partial => 'form', :object => f
          .actions
            = f.submit '发表', class: "btn btn-success", style: "margin-top: 10px;"

      #sidebar.span3.box
        - if logged_in?
          = render 'shared/sidebar_profile'
        - else
          = render 'shared/sidebar_login'