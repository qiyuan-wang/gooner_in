#main
  .container
    .row
      #mainbar.span9.box
        %h2.question-title.white #{@question.title}
        .related-players-wrapper.clearfix
          .related-players
            %h4.white 相关球员
            - if !@question.related_players.empty?
              %ul.unstyled
                = render :partial => 'related_player', collection: @question.related_players.limit(2)
        = render 'form'
      #sidebar.span3.box
        - if logged_in?
          = render 'shared/sidebar_profile'
        - else
          = render 'shared/sidebar_login'