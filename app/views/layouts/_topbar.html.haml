.topbar
  .container
    .row
      .span12
        .logo-box
          .logo
            = link_to "Gooner.in", root_path
          %span.slogan - In Arsenal we trust.
        %ul.nav.nav-pills.pull-right
          %li{:class => (controller_name == 'answers' && action_name == 'index' ? 'active' : nil)}
            = link_to icon_tag_label("home", "首页"), root_path 
          %li{:class => (controller_name == 'questions' && action_name == 'index' ? 'active' : nil)}
            = link_to icon_tag_label("th-large", "最新"), questions_path
          %li{:class => (controller_name == 'players' && action_name == 'index' ? 'active' : nil)}
            = link_to icon_tag_label("list-alt", "阵容"), players_path
          - if logged_in?
            %li.dropdown.pull-right
              %a{:href => person_path(:name => current_user), :class => 'dropdown-toggle', 'data-toggle' => 'dropdown', 'data-target' => '#'}
                = icon_tag_label("user","#{current_user.name}")
                %b.caret
              %ul.dropdown-menu
                %li
                  = link_to "我的主页", person_path(current_user.name)
                %li
                  = link_to "设置", settings_profile_path
                %li
                  = link_to "退出", :log_out
          - else
            %li.pull-right
              = link_to "登录", :log_in
            %li.pull-right
              = link_to "注册", :sign_up

        