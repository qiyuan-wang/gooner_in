#main
  .container
    .row
      #mainbar.span9.box
        .players-list
          %h2 全部球员
          %ul.unstyled
            - @players.each do |player|
              %li.pull-left
                .avatar
                  = link_to image_tag("players/#{player.e_name}.jpg"), player_path(id: player.e_name)
                =link_to player.name, player_path(id: player.e_name)
    
    = link_to 'New Player', new_player_path
