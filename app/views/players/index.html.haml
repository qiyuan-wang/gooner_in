#main
  .container
    .row
      .mainbar.span9.box
        %ul.breadcrumbs
          %li
            = link_to 'Gooner.in', root_path
            %span.divider -
          %li.active 球员
        .players-list
          %ul.unstyled
            - @players.each do |player|
              %li.pull-left
                .avatar-middle
                  = link_to image_tag("players/#{player.e_name}.jpg", alt: "#{player.name}"), player_path(id: player.e_name)
                =link_to player.name, player_path(id: player.e_name)
    
      %aside.span3.box
        .control
          %h3 管理
          = link_to '新球员', new_player_path
    
