#main
  .container
    .row
      #mainbar.span9.box
        .players-list
          %ul.unstyled
            - @players.each do |player|
              %li.pull-left
                .avatar-middle
                  = link_to image_tag(player.avatar_url(:middle), alt: "#{player.name}"), player_path(id: player.e_name)
                =link_to player.name, player_path(id: player.e_name)
      #sidebar.span3.box
        = render 'shared/sidebar'
        - if logged_in? && current_user.admin?
          .control
            %h4.title-small.font-white.background-dark-blue 管理
            %ul.nav.nav-list
              %li
                = link_to '新球员', new_player_path
          %hr
    
