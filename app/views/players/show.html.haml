#main
  .container
    .row
      .mainbar.span9.box
        %section#profile
          .player-info
            .avatar.pull-left
              = image_tag "players/#{@player.e_name}.jpg"
            .info-wrapper
              .info-txt
                %h3 #{@player.name}
                %table
                  %thead
                    %tr
                      %th 位置
                      %th 国籍
                      %th 出生日期
                  %tbody
                    %tr
                      %td #{@player.position}
                      %td #{@player.nationality}
                      %td #{@player.day_of_birth}
      %aside.span3.box
        .control
          %ul.unstyled
            %li
              = link_to '编辑', edit_player_path(@player)
            %li
              = link_to '删除', @player, method: :delete, confirm: "确定删除？"
                
          
          
