
= form_for @question do |f|
  -if @question.errors.any?
    #error_explanation
      %h2= "#{pluralize(@question.errors.count, "error")} prohibited this question from being saved:"
      %ul
        - @question.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :title
    = f.text_field :title
    = f.label :related_players
    = select "question", "related_players", Player.all.collect{|p| [p.name, p.id]},{ include_blank: false }, { multiple: true }
  .actions
    = f.submit 'Save'
