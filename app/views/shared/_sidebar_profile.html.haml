.user-profile.sidebar-wrapper
  %h4.title-small.font-white.background-dark-blue A Gooner...
  .user-avatar
    = image_tag current_user.avatar_url(:large), alt: "#{current_user.name}"
    = link_to '编辑头像', settings_profile_path, class: "pull-right"
%hr
%ul.nav.nav-list
  %li{:class => (action_name == 'answers_list' && current_user == @person ? 'active' : nil)}
    = link_to '我的回答', person_answers_path(current_user.name)
  %li{:class => (action_name == 'questions_list' && current_user == @person ? 'active' : nil)}
    = link_to '我的问题', person_questions_path(current_user.name)
  %li{:class => (action_name == 'liked_list' && current_user == @person ? 'active' : nil)}
    = link_to '我喜欢的', person_liked_path(current_user.name)
%hr
- unless controller_name == 'questions' && action_name != 'index'
  #ask
    %p.font-gray 问题都没意思？那你问一个
    = link_to '提问', new_question_path, class: "btn btn-danger", style: "width: 80px;"
  %hr