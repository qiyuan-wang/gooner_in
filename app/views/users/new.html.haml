#main
  .container
    .row
      .mainbar.span9.box
        = form_for @user do |f|
          - if @user.errors.any?
            #error_explanation
              %h2= "#{pluralize(@user.errors.count, "error")} prohibited this user from being saved:"
              %ul
                - @user.errors.full_messages.each do |msg|
                  %li= msg
          .field
            = f.label :email, 'Email:'
            = f.text_field :email
          .field
            = f.label :name, '用户名:'
            = f.text_field :name
          .field
            = f.label :password, '密码:' 
            = f.password_field :password
          .field
            = f.label :password_confirmation, '确认密码:'
            = f.password_field :password_confirmation
          .actions
            = f.submit '创建用户'
        
  
    