#main
  .container
    .row
      .mainbar.span9.box
        = form_for @user, validate: true do |f|
          .field
            = f.label :email, 'Email:'
            = f.text_field :email
          .field
            = f.label :name, '用户名:'
            = f.text_field :name
          .field
            = f.label :password, '密码:' 
            = f.password_field :password , :validate => { :confirmation => false }
          .field
            = f.label :password_confirmation, '确认密码:'
            = f.password_field :password_confirmation
          .actions
            = f.submit '创建用户', class: "btn btn-success"
        
  
    